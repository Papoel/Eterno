{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{# Import stlesheet Admin #}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/admin.css') }}">
{% endblock %}

{% block body %}
    <section class="sb-nav-fixed">
        <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
            <a class="navbar-brand ps-3 gradient-text" href="{{ path( app.user ? 'home.user_connected' : 'home.index') }}">Eterno</a>
        </nav>

        <div id="layoutSidenav">
            {{ include('admin/Layout/_layoutSidenav_nav.html.twig') }}

            <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <h1 class="mt-4">ETERNO</h1>
                        <ol class="breadcrumb mb-4"><li class="breadcrumb-item active">Tableau de bord</li></ol>

                        {# Carte stats #}
                        <div class="row">
                            <div class="col-xl-3 col-md-6">
                                <div class="card bg-primary text-white mb-4">
                                    <div class="card-body">Nombre d'utilisateurs</div>
                                    <div class="card-footer d-flex align-items-center justify-content-between">
                                        <a class="small stretched-link" href="{{ path('admin.user.index') }}">Voir les détails</a>
                                        <div class="small badge bg-primary text-white">
                                            {{ totalUsers }}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xl-3 col-md-6">
                                <div class="card bg-danger text-white mb-4">
                                    <div class="card-body">Nombre de Lumière</div>
                                    <div class="card-footer d-flex align-items-center justify-content-between">
                                        <a class="small stretched-link" href="#">Voir les détails</a>
                                        <div class="small badge bg-danger text-white">
                                            {{ totalLights }}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xl-3 col-md-6">
                                <div class="card bg-success text-white mb-4">
                                    <div class="card-body">Messages envoyés</div>
                                    <div class="card-footer d-flex align-items-center justify-content-between">
                                        <a class="small stretched-link" href="#">Voir les détails</a>
                                        <div class="small badge bg-success text-white">
                                            {{ totalMessages }}
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-xl-3 col-md-6">
                                <div class="card bg-warning text-white mb-4">
                                    <div class="card-body">Invitations envoyées</div>
                                    <div class="card-footer d-flex align-items-center justify-content-between">
                                        <a class="small stretched-link" href="#">Voir les détails</a>
                                        <div class="small">
                                            <span class="badge bg-warning text-dark">{{ invitationsAccepted }}</span>
                                            <span class="badge bg-secondary-subtle text-secondary">{{ invitationsNotAccepted }}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-xl-6">
                                <div class="card mb-4">
                                    <div class="card-header">
                                        <i class="fas fa-chart-area me-1"></i>
                                        Messages envoyés au cours des 4 derniers mois
                                    </div>

                                    <div class="card-body">
                                        {% if totalMessages > 0 %}
                                            {{ render_chart(chart) }}
                                        {% else %}
                                            <p class="text-center">Aucun message envoyé</p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>

                        {# Chart #}
                        {#<div class="row">
                            <div class="col-xl-6">
                                <div class="card mb-4">
                                    <div class="card-header">
                                        <i class="fas fa-chart-area me-1"></i>
                                        Area Chart Example
                                    </div>
                                    <div class="card-body">
                                        <canvas id="myAreaChart" width="100%" height="40"></canvas>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="card mb-4">
                                    <div class="card-header">
                                        <i class="fas fa-chart-bar me-1"></i>
                                        Bar Chart Example
                                    </div>
                                    <div class="card-body"><canvas id="myBarChart" width="100%" height="40"></canvas></div>
                                </div>
                            </div>
                        </div>#}
                    </div>
                </main>
            </div>
        </div>
    </section>

    {# javascript #}
    {% block javascripts %}
        {{ parent() }}
        <script src="{{ asset('js/admin.js') }}"></script>
    {% endblock %}
{% endblock %}
