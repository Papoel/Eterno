{% extends 'base.html.twig' %}
{% block title %}Accueil {% if app.user is not null %}{{ app.user.fullname }}{% endif %}{% endblock %}

{% block body %}
    {{ include('partials/_menu.html.twig') }}
        <main>
            <!-- Page header START -->
            <section class="py-5"
                 style="background-image:url({{ asset('images/bg/header.jpg') }}); background-position: center center; background-size: cover; background-repeat: no-repeat;">
                <div class="container">
                    <div class="row justify-content-center py-5">
                        <div class="col-md-6 text-center">
                            <!-- Title -->
                            <h1 class="text-white">ETERNO : Lumière du Souvenir</h1>
                            <p class="mb-4 text-white">Laissez vos mots briller au-delà des frontières du temps..</p>
                        </div>
                    </div>
                </div>
            </section>
            <!-- Page header END -->

            <section>
                <div class="container h-100">
                    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
                        {% for light in lights %}
                            <div class="col my-2">
                                {% include 'light/_card.html.twig' %}
                            </div>
                        {% endfor %}
                    </div>
                </div>

                {% if lights is empty %}
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-md-6 text-center">
                                <h2 class="text-muted my-5">Aucune lumière n'a encore été allumée.</h2>
                            </div>
                        </div>
                    </div>
                    {# CTA: Create light #}
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-md-6 text-center">
                                <a href="{{ path('app_light_new') }}" class="btn btn-primary">Allumer votre première lumière</a>
                            </div>
                        </div>
                    </div>

                {% endif %}

        </section>
    </main>
{% endblock %}
