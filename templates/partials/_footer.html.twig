        <li class="nav-item"><a href="{{ path('home.index') }}" class="nav-link px-2 text-body-secondary">Accueil</a></li>
        <li class="nav-item"><a href="{{ path('app_contact') }}" class="nav-link px-2 text-body-secondary">Contact</a></li>
